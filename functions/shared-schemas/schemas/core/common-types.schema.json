{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wandermint.com/schemas/common-types.schema.json",
  "title": "CommonTypes",
  "description": "Shared type definitions used across all WanderMint schemas",
  "version": "1.0.0",
  "lastUpdated": "2026-01-02",
  "$defs": {
    "ISODate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "ISO 8601 date format (YYYY-MM-DD)",
      "examples": [
        "2026-06-15",
        "2026-12-25"
      ]
    },
    "ISODateTime": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 date-time format",
      "examples": [
        "2026-06-15T14:30:00Z",
        "2026-12-25T09:00:00-05:00"
      ]
    },
    "CurrencyCode": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "description": "ISO 4217 currency code (3 uppercase letters)",
      "examples": [
        "USD",
        "EUR",
        "GBP",
        "JPY"
      ]
    },
    "NonNegativeNumber": {
      "type": "number",
      "minimum": 0,
      "description": "Non-negative number (>= 0)"
    },
    "PositiveInteger": {
      "type": "integer",
      "minimum": 1,
      "description": "Positive integer (>= 1)"
    },
    "URL": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://",
      "description": "HTTP or HTTPS URL",
      "examples": [
        "https://example.com",
        "http://localhost:3000"
      ]
    },
    "Email": {
      "type": "string",
      "format": "email",
      "description": "Valid email address",
      "examples": [
        "user@example.com"
      ]
    },
    "NonEmptyString": {
      "type": "string",
      "minLength": 1,
      "description": "Non-empty string"
    },
    "Timestamp": {
      "type": "object",
      "description": "Firebase Timestamp object",
      "properties": {
        "_seconds": {
          "type": "integer"
        },
        "_nanoseconds": {
          "type": "integer"
        }
      },
      "required": ["_seconds", "_nanoseconds"]
    },
    "FlightClass": {
      "type": "string",
      "enum": [
        "Economy",
        "Premium Economy",
        "Business",
        "First"
      ],
      "description": "Flight cabin class"
    },
    "TripStatus": {
      "type": "string",
      "enum": [
        "draft",
        "pending",
        "planning",
        "completed",
        "accepted",
        "rejected",
        "cancelled"
      ],
      "description": "Trip status in the workflow"
    }
  }
}
